<h1>Edit Event</h1>

<form method="post" action="/events/edit">
    <label>Name of Event</label><input name="name" type="text" value="@ViewBag.eventToEdit.Name" />
    <label>Description of Event</label><input name="description" type="text" value="@ViewBag.eventToEdit.Description" />
    <input type="hidden" value="@ViewBag.eventToEdit.Id" name="eventId" />
    <input type="submit" value="Edit Event" />
</form>