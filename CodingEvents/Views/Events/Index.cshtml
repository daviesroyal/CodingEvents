@using CodingEvents.Models;
@model List<Event>

<h1>Coding Events</h1>

@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Location</th>
            <th>Number of Attendees</th>
            <th>Contact Email</th>
        </tr>
        @foreach (var evt in Model)
        {
        <tr>
            <td><a asp-controller="Events" asp-action="Detail" asp-route-id="@evt.Id">@evt.Name</a></td>
            <td>@evt.Description</td>
            <td>@evt.Category.Name</td>
            <td>@evt.Location</td>
            <td>@evt.NumOfAttendees</td>
            <td>@evt.ContactEmail</td>
        </tr>
        }
    </table>
}

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>
<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>